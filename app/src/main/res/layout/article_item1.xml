<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:id="@+id/rl_dingbu"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
       >

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tl_title">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/ll_title1" >
                <RelativeLayout
                    android:id="@+id/ll_articletitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="文章标题"
                        android:textSize="15dp"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_title1" />
                </RelativeLayout>
                </RelativeLayout>

            <RelativeLayout
                android:layout_alignLeft="@+id/ll_title1"
                android:layout_alignBottom="@+id/iv_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ll_time_readnumber"
                >
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发表时间"
                    android:textSize="10dp"
                    android:id="@+id/tv_article_time1"
                    android:layout_gravity="end"/>
                <TextView
                    android:layout_toRightOf="@+id/tv_article_time1"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="20160506"
                    android:textSize="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_article_fabiaotime"/>

                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/tv_readnumber1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阅读量:"
                    android:textSize="10dp"
                    android:id="@+id/tv_read"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="num"
                    android:textSize="10dp"
                    android:id="@+id/tv_readnumber1" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_launcher"
                >
             </ImageView>


        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/rl_dingbu"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/hui">
    </LinearLayout>

</RelativeLayout>