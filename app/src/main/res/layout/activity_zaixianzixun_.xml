<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_zaixianzixun_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#17abe3"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/zaixianzixun_toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_zixu_fanhui"
            app:srcCompat="@mipmap/fanghui_baise"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写咨询"
            android:textColor="#ffffff"
            android:layout_marginLeft="118dp"
            android:textSize="22dp"/>

    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_below="@+id/zaixianzixun_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearlayout"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:id="@+id/linearlayout1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/zaixianzixun_textview1"
                    android:text="服务价格：
医生前三次有效回复免费，后续有效回复60/次"
                    android:textSize="14dp"
                    android:gravity="center|left"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp" />


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E6E6E6"
                android:id="@+id/linearlayout2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/textview_jifen"
                    android:text="填写患者信息"
                    android:textSize="14dp"
                    android:gravity="center|left"
                    android:layout_marginLeft="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:id="@+id/linearlayout_huanzhe"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@mipmap/xiayiye"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/textview_huanzhe"
                        android:background="@android:color/transparent"
                        />
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:id="@+id/textview_huanzhe"
                        android:hint="请选择患者"
                        android:textSize="18dp"
                        android:gravity="center|left"
                        android:layout_marginLeft="15dp" />




                </RelativeLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:id="@+id/linearlayout_shichang"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@mipmap/xiayiye"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/textview_dizhi"
                        android:background="@android:color/transparent"
                        />
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:id="@+id/textview_dizhi"
                        android:hint="请选择患病时长"
                        android:textSize="18dp"
                        android:gravity="center|left"
                        android:layout_marginLeft="15dp" />




                </RelativeLayout>




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E6E6E6"
                android:id="@+id/linearlayout_maioshu"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/textview_miaoshu"
                    android:text="描述问题："
                    android:textSize="14dp"
                    android:gravity="center|left"

                    android:layout_marginLeft="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:id="@+id/linearlayout_huanzhe1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@mipmap/xiayiye"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/textview_miaoshu1"
                        android:background="@android:color/transparent"
                        />
                    <cn.gem.weight.login_edittext
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:id="@+id/textview_miaoshu1"
                        android:hint="例：皮肤红肿了怎么办？(5-25字)"
                        android:textSize="14dp"
                        android:background="@null"
                        android:gravity="center|left"
                        android:layout_marginLeft="15dp" />




                </RelativeLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E6E6E6"
                android:id="@+id/linearlayout_bingqin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/textview_bingqin"
                    android:text="描述病情："
                    android:textSize="14dp"
                    android:gravity="center|left"

                    android:layout_marginLeft="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:id="@+id/linearlayout_bingqing1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@mipmap/xiayiye"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/textview_bingqin1"
                        android:background="@android:color/transparent"
                        />
                    <cn.gem.weight.login_edittext
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:id="@+id/textview_bingqin1"
                        android:hint="填写疾病名称或症状？(2-20字)"
                        android:textSize="14dp"
                        android:background="@null"
                        android:gravity="center|left"
                        android:layout_marginLeft="15dp" />




                </RelativeLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:id="@+id/linearlayout_bingqing14"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="66dp"
                        app:srcCompat="@mipmap/xiayiye"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/textview_bingqinxiangxi"
                        android:background="@android:color/transparent"
                        />
                    <cn.gem.weight.login_edittext
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:id="@+id/textview_bingqinxiangxi"
                        android:hint="详细描述症状，诱因，发病部位，发病特点，患病史，用药情况，以及想要的帮助(20-1000字)"
                        android:textSize="14dp"
                        android:background="@null"
                        android:gravity="center|left"
                        android:layout_marginLeft="15dp" />
                </RelativeLayout>

            </LinearLayout>

            .
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:id="@+id/linearlayout_chuanzhaopian"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/imagebutton_shezhi"
                    app:srcCompat="@mipmap/bingqintianjia"
                    android:layout_marginLeft="15dp"
                    android:background="@android:color/transparent"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/textview_shezhi"
                    android:text="如有病例，检验，化验单，疾病部位等都可以拍照上传,最多9张（选填）"
                    android:textSize="14dp"
                    android:gravity="center|left"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#E6E6E6"
                android:id="@+id/linearlayout_tishi"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/textview_tishi"
                    android:text="咨询提示：若咨询不在医生擅长范围内，或医生忙碌无法回答时，自动为您推荐跟合适的医生"
                    android:textSize="14dp"
                    android:gravity="center|left"
                    android:layout_marginLeft="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:id="@+id/linearlayout_button"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">



                    <CheckBox
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/checkbox"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="同意《MyDoctor用户协议》"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/checkbox"/>


                         <Button
                             android:layout_width="260dp"
                             android:layout_height="50dp"
                             android:layout_marginLeft="64dp"
                             android:layout_marginTop="60dp"
                             android:background="@color/ww"
                             android:text="提交"
                             android:textColor="#ffffff"
                             android:textSize="20dp"
                             android:id="@+id/button_tijiao"
                             />




                </RelativeLayout>




            </LinearLayout>




        </LinearLayout>

    </ScrollView>




</RelativeLayout>

