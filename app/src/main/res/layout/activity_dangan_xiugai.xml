<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_dangan_xiugai"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.gem.mydoctor.dangan_xiugaiActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#17abe3"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar_dangantianjia"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_back_xiugai"
            app:srcCompat="@mipmap/fanghui_baise"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑档案信息"
            android:textColor="#ffffff"
            android:layout_marginLeft="90dp"
            android:textSize="22dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="完成"
            android:textColor="#ffffff"
            android:layout_marginLeft="36dp"
            android:id="@+id/bianjidanganxinxi_button"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar_dangantianjia">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:padding="10dp"
            android:id="@+id/danganxiugai_liner_touxiang">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:id="@+id/danganxiugai_liner_show"
                android:textSize="18dp"
                android:gravity="center|left"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/xiayiye"
                android:id="@+id/danganxiugai_imageview_touxiang"
                android:layout_marginLeft="280dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/danganxiugai_liner_xingming"
            android:padding="10dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textSize="18dp"
                android:gravity="center|left"
              />



            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="必填"
                android:textColor="@color/textcolor"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:id="@+id/danganxiugai_edittext_xingming"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:padding="10dp"
            android:id="@+id/danganxiugai_liner_shouji">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机"
                android:textSize="18dp"
                android:gravity="center|left"
              />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="必填"
                android:textColor="@color/textcolor"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:id="@+id/danganxiugai_edittext_shouji"
                android:inputType="phone"
              />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:padding="10dp"
            android:id="@+id/danganxiugai_liner_nianlin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年龄"
                android:textSize="18dp"
                android:gravity="center|left"
               />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="选填"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:inputType="number"
                android:id="@+id/danganxiugai_edittext_nianlin"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:padding="10dp"
            android:id="@+id/danganxiugai_liner_xinbie">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textSize="18dp"
                android:gravity="center|left"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="选填"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/danganxiugai_edittext_xinbie"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:padding="10dp"
            android:id="@+id/danganxiugai_shenfenzheng">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证"
                android:textSize="18dp"
                android:gravity="center|left"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="必填"
                android:background="@null"
                android:textColor="@color/textcolor"
                android:layout_marginLeft="20dp"
                android:id="@+id/danganxiugai_edittext_shenfenzheng"
                android:inputType="number"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:padding="10dp"
            android:id="@+id/danganxiugai_liner_shenfen">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份"
                android:textSize="18dp"
                android:gravity="center|left"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="选填"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/danganxiugai_edittext_shengfen"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:padding="10dp"
            android:id="@+id/danganxiugai_liner_shenggao">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身高"
                android:textSize="18dp"
                android:gravity="center|left"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="选填"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:inputType="number"
                android:id="@+id/danganxiugai_edittext_shenggao"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CM"
                android:textSize="18dp"
                android:layout_marginLeft="230dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:padding="10dp"
            android:id="@+id/danganxiugai_liner_tizhong">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体重"
                android:textSize="18dp"
                android:gravity="center|left"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="选填"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:inputType="number"
                android:id="@+id/danganxiugai_edittext_tizhong"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KG"
                android:textSize="18dp"
                android:layout_marginLeft="230dp"
                />
        </LinearLayout>


<Button
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:background="#17abe3"
    android:text="删除此档案"
    android:textColor="#ffffff"
    android:layout_marginLeft="120dp"
    android:layout_marginTop="20dp"
    android:id="@+id/danganxiugai_edittext_button"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="10dp"
    android:visibility="gone"/>


    </LinearLayout>

</RelativeLayout>
