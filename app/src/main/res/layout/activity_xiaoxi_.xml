<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativelayout_1"
    tools:context="cn.gem.mydoctor.xiaoxi_Activity">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#17abe3"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar_xiaoxi"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的消息"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:layout_marginLeft="87dp"
            android:layout_alignBottom="@+id/toolbar5"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp" />
    </android.support.v7.widget.Toolbar>
   <LinearLayout
       android:id="@+id/liner_xiaoxi"
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:orientation="horizontal"
      android:layout_below="@+id/toolbar_xiaoxi">


    <TextView
        android:id="@+id/xiaoxi_fragment_tab1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="系统消息"
        android:textSize="14sp"
        android:textColor="#17abe3"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/xiaoxi_fragment_tab2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="精选消息"
        android:textSize="14sp"
        android:textColor="#17abe3"
        android:gravity="center"/>

</LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/liner_xiaoxi"
        android:id="@+id/xiaoxi_viewpager">

    </android.support.v4.view.ViewPager>

</RelativeLayout>
