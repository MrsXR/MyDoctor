<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_layout_content"
        android:layout_marginBottom="10dp"
        android:text="测试"
        android:textSize="@dimen/activity_text_size"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_layout_temp"
        android:layout_below="@+id/dialog_layout_content"
        android:layout_centerHorizontal="true"
      >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_layout_ensure"
        android:text="删除"
        android:background="@color/colorWhite"
        android:layout_weight="1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_layout_cancel"
        android:text="取消"
        android:background="@color/colorWhite"
        android:layout_toRightOf="@+id/dialog_layout_ensure"
        android:layout_weight="1"
        />

    </LinearLayout>
</RelativeLayout>