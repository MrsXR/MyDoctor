<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_mydoctor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="cn.gem.mydoctor.login_mydoctorActivity">


    <Button
        android:text="手机注册"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_shoujichucei"
        android:layout_marginBottom="19dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="登录"
        android:textColor="#ffffff"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@color/ww"
        android:id="@+id/button_denglu"
        android:layout_above="@+id/button_zhaohuimima"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp" />

    <cn.gem.weight.login_edittext
        android:id="@+id/edit_user1_mima"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="3"
        android:background="@android:color/white"
        android:hint="请输入用户密码"
        android:layout_below="@+id/edit_user_zhanghao"
        android:inputType="textPersonName"
        android:maxLength="30"
        android:paddingLeft="10.0dip"
        android:textSize="16.0sp"
        android:layout_above="@+id/button_denglu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp" />

    <cn.gem.weight.login_edittext
        android:id="@+id/edit_user_zhanghao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="3"
        android:background="@android:color/white"
        android:hint="请输入用户账号"
        android:inputType="textPersonName"
        android:maxLength="30"
        android:paddingLeft="10.0dip"
        android:textSize="16.0sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:src="@mipmap/sey_man_a"
        android:id="@+id/imageView2"
        android:layout_marginBottom="150dp"
        android:layout_above="@+id/edit_user1_mima"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="找回密码"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_zhaohuimima"
        android:layout_alignBaseline="@+id/button_shoujichucei"
        android:layout_alignBottom="@+id/button_shoujichucei"
        android:layout_toLeftOf="@+id/button_shoujichucei"
        android:layout_toStartOf="@+id/button_shoujichucei" />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/ww"
        android:id="@+id/toolbar4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </android.support.v7.widget.Toolbar>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/fanghui"
        android:id="@+id/imageButton6"
        android:background="@color/ww"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button_denglu"
        android:layout_toStartOf="@+id/button_denglu" />

    <TextView
        android:text="登录"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/toolbar4"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
