<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_dangantianjia_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.gem.mydoctor.dangantianjia_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar_dangantianjia">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:id="@+id/liner_touxiang">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="18dp"
            android:gravity="center|left"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="17dp"/>




        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tianjiadanan_touxiang"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="250dp"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/liner_xingming"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"

                android:textSize="18dp"
                android:gravity="center|left"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="17dp"/>



            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="必填"
                android:background="@null"
                android:id="@+id/tianjiadanan_xingming"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="240dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/liner_shouji">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机"
                android:textSize="18dp"
                android:gravity="center|left"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="17dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="必填"
                android:background="@null"
                android:id="@+id/tianjiadanan_shouji"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="240dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/liner_nianlin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年龄"
                android:textSize="18dp"
                android:gravity="center|left"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="17dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="选填"
                android:background="@null"
                android:id="@+id/tianjiadanan_nianlin"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="240dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/liner_xinbie">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textSize="18dp"
                android:gravity="center|left"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="17dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="选填"
                android:textSize="18dp"
                android:id="@+id/tianjiadanan_xiebie"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="245dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/liner_shenfenzheng">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证"
                android:textSize="18dp"
                android:gravity="center|left"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="17dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="选填"
                android:background="@null"
                android:id="@+id/tianjiadanan_shenfenzheng"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="220dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/liner_shenfen">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份"
                android:textSize="18dp"
                android:gravity="center|left"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="17dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="必填"
                android:textSize="18dp"
                android:id="@+id/tianjiadanan_shengfen"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="240dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/liner_shenggao">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身高"
                android:textSize="18dp"
                android:gravity="center|left"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="17dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="选填"
                android:background="@null"
                android:id="@+id/tianjiadanan_shenggao"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="240dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/liner_tizhong">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体重"
                android:textSize="18dp"
                android:gravity="center|left"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="17dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="选填"
                android:background="@null"
                android:id="@+id/tianjiadanan_tizhong"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="240dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:orientation="horizontal">



        </LinearLayout>


    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#17abe3"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar_dangantianjia"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:layout_marginLeft="93dp"
            android:layout_alignBottom="@+id/toolbar5"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp" />

        <Button
            android:id="@+id/dangantianjia_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textColor="#ffffff"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="90dp"
            android:background="@color/colorPrimaryDark"/>


    </android.support.v7.widget.Toolbar>


</RelativeLayout>
