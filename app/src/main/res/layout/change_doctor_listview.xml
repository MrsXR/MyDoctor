<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/chang_doctor_item"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView"
        android:background="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="医生姓名"
        android:id="@+id/change_doctor_name"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="医生的职位"
        android:layout_marginLeft="5dp"
        android:id="@+id/change_doctor_position"
        android:background="@drawable/set_textview"
        android:layout_alignBottom="@+id/change_doctor_name"
        android:layout_toRightOf="@+id/change_doctor_name"
     />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推荐指数："
        android:id="@+id/change_temp2"
        android:layout_toRightOf="@+id/change_doctor_position"
        android:layout_alignBottom="@+id/change_doctor_name"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small"
        android:id="@+id/change_doctor_textView5"
        android:textColor="@color/colorAccent"
        android:layout_alignBottom="@+id/change_doctor_name"
        android:layout_toRightOf="@+id/change_temp2"
 />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="医生简介"
        android:id="@+id/change_doctor_brief"
        android:ellipsize="end"
        android:maxEms="20"
        android:singleLine="true"
        android:textSize="12dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toRightOf="@+id/imageView" />


</RelativeLayout>