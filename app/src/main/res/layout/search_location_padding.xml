<?xml version="1.0" encoding="utf-8"?>
<!-- 搜索输入框的相对布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_columnWeight="4"
    android:background="@color/blue">
<RelativeLayout
    android:paddingLeft="@dimen/padding_search_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:paddingRight="10dp"

     >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/get_location_back"
        android:background="@mipmap/back6"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        />

    <EditText
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/baidu_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/seabar_input"
        android:drawableLeft="@drawable/search_bar_icon_normal"
        android:hint="输入搜索内容"
         android:textSize="16sp"
        android:singleLine="true"
        android:layout_toRightOf="@+id/get_location_back"
         />

    <!--  android:visibility="invisible" -->
    <ImageButton
        android:id="@+id/search_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:background="@android:color/transparent"
        android:padding="6dp"
        android:visibility="gone"
        android:src="@drawable/ease_search_clear"
        />
</RelativeLayout>
    <TextView
        android:id="@+id/go_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="搜索"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:layout_marginRight="5dp"
        />
</LinearLayout>