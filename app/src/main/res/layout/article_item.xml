<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/article_title_item">
    <ImageView
        android:layout_marginRight="8dp"
        android:id="@+id/iv_article_photo"
        android:layout_width="70dp"
        android:layout_height="50dp" />
        <TextView
            android:id="@+id/tv_article_title"
            android:textColor="@color/text"
            android:text="文章标题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_article_photo"/>
        <TextView
            android:layout_toRightOf="@+id/iv_article_photo"
            android:layout_alignBottom="@+id/iv_article_photo"
            android:id="@+id/article_time"
            android:text="2012-05-02"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_alignBottom="@+id/iv_article_photo"
            android:text="阅读量:"
            android:layout_toRightOf="@+id/article_time"
            android:id="@+id/tv_article_looknum"
            android:textColor="@color/click"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_article_looknum1"
            android:textColor="@color/click"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/tv_article_looknum"
            android:textSize="10dp"
            android:text="200"
            android:layout_alignBottom="@+id/iv_article_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/article_from"
            android:layout_alignBottom="@+id/iv_article_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="健康网"
            android:textSize="10dp"
            android:textColor="#0000ff"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:layout_above="@+id/article_time"
            android:layout_toRightOf="@+id/iv_article_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_content"
            android:textSize="10dp"
            android:text="这种食物吃了有问题"
            android:layout_below="@+id/tv_article_title"/>

    </RelativeLayout>


    </RelativeLayout>

