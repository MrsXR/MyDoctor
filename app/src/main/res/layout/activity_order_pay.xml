<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.gem.mydoctor.OrderPayActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/order_toolbar"
        android:background="@color/blue"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address_name"
            android:text="选择付款方式"
            android:textSize="25dp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"/>
            />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pay_r_temp"
        android:layout_below="@+id/order_toolbar"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约信息"
            android:id="@+id/pay_temp"
            android:textSize="20dp"
            android:textColor="@color/textcolor"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="就医医院:       "
            android:id="@+id/pay_temp1"
            android:layout_below="@+id/pay_temp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医院名称"
            android:layout_below="@+id/pay_temp"
            android:layout_toRightOf="@+id/pay_temp1"
            android:id="@+id/order_pay_hospital_name"
            android:textColor="@color/textcolor"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="就诊科室       "
            android:id="@+id/pay_temp2"
            android:layout_below="@+id/pay_temp1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="科室名称"
            android:layout_toRightOf="@+id/pay_temp1"
            android:layout_below="@+id/order_pay_hospital_name"
            android:id="@+id/order_pay_subject_name"
            android:textColor="@color/textcolor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="就诊医生       "
            android:id="@+id/pay_temp12"
            android:layout_below="@+id/pay_temp2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医生名称"
            android:layout_toRightOf="@+id/pay_temp1"
            android:layout_below="@+id/order_pay_subject_name"
            android:id="@+id/order_pay_doctor_name"
            android:textColor="@color/textcolor"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="就诊人       "
            android:id="@+id/pay_temp3"
            android:layout_below="@+id/pay_temp12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人名称"
            android:id="@+id/order_pay_user_name"
            android:layout_toRightOf="@+id/pay_temp1"
            android:layout_below="@+id/order_pay_doctor_name"
            android:textColor="@color/textcolor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="省份证号       "
            android:id="@+id/pay_temp4"
            android:layout_below="@+id/pay_temp3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="省份证号"
            android:layout_toRightOf="@+id/pay_temp1"
            android:id="@+id/order_pay_user_number"
            android:layout_below="@+id/order_pay_user_name"
            android:textColor="@color/textcolor"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号码       "
        android:id="@+id/pay_temp5"
        android:layout_below="@+id/pay_temp4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:layout_toRightOf="@+id/pay_temp1"
            android:id="@+id/order_pay_user_phone"
            android:layout_below="@+id/order_pay_user_number"
            android:textColor="@color/textcolor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="症状描述      "
            android:id="@+id/pay_temp6"
            android:layout_below="@+id/pay_temp5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="症状描述"
            android:layout_toRightOf="@+id/pay_temp1"
            android:id="@+id/order_pay_user_ill"
            android:layout_below="@+id/order_pay_user_phone"
            android:textColor="@color/textcolor"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付金额      "
            android:id="@+id/pay_temp7"
            android:layout_below="@+id/pay_temp6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付金额"
            android:layout_toRightOf="@+id/pay_temp1"
            android:id="@+id/order_pay_money"
            android:layout_below="@+id/order_pay_user_ill"
            android:textColor="@color/colorAccent"/>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/splitbar"
        android:layout_below="@+id/pay_r_temp"
        android:id="@+id/pay_temp10"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_below="@+id/pay_temp10"
        android:id="@+id/pay_temp11">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="请选择支付方式"
                android:textColor="@color/textcolor"
                android:textSize="14sp"/>
        </RelativeLayout>
        <View style="@style/bg_line"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"/>
        <RelativeLayout
            android:id="@+id/gopay_rl_weixinpay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp">
            <ImageView
                android:id="@+id/gopay_weixinpay_temp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/wechat"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/gopay_weixinpay_temp"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信支付"
                    android:textSize="18sp"
                    android:textColor="@color/textcolor"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐已安装微信客户端的用户使用"
                    android:paddingTop="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/textcolor"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/gopay_select_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="6dp"
                android:src="@drawable/select_all_gray"/>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/gopay_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_green"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="30dp"
        android:text="确认支付"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_below="@+id/pay_temp11"/>
    <View style="@style/bg_line"/>


</RelativeLayout>
