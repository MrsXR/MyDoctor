<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"

            android:background="@mipmap/back1"/>

        <EditText
            android:id="@+id/editText"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="10"
            android:hint="请输入疾病、医生、医院"
            android:drawableLeft="@mipmap/sousuo"
            android:background="@drawable/editshape"
            android:textSize="12dp"
            />
        <Button
            android:id="@+id/bt_find"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:text="搜索"
            android:textColor="@color/colorPrimary"
            android:background="@android:color/transparent"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_hsp"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/tv_hsp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="医院"
            android:textSize="22dp"
            />

    </LinearLayout>

    <cn.gem.weight.NoScrollListview
        android:id="@+id/lv_hsp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </cn.gem.weight.NoScrollListview>

    <TextView
        android:id="@+id/tv_doc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="医生"
        android:textSize="22dp"
        android:visibility="gone"/>

    <cn.gem.weight.NoScrollListview
        android:id="@+id/lv_doc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </cn.gem.weight.NoScrollListview>

    <TextView
        android:id="@+id/tv_art"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="话题"
        android:textSize="22dp"
        android:visibility="gone"/>
    <cn.gem.weight.NoScrollListview
        android:id="@+id/lv_art"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </cn.gem.weight.NoScrollListview>



</LinearLayout>
