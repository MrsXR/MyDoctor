<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_email"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.gem.mydoctor.emailActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ww"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/toolbar2">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toolbar2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:id="@+id/textView7" />

    <cn.gem.weight.login_edittext
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edit_user_zhucei_miam"
        android:layout_weight="3"
        android:background="@android:color/white"
        android:hint="请设置密码"
        android:inputType="textPersonName"
        android:maxLength="30"
        android:paddingLeft="10.0dip"
        android:textSize="16.0sp"
        android:layout_below="@+id/edit_user_zhucei_zhanghao"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="注册"
        android:id="@+id/button_zhucei"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@color/ww"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/edit_user_zhucei_yanzheng"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="获取验证码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/button_houquyanzhengma"
        android:layout_alignBaseline="@+id/edit_user_zhucei_yanzheng"
        android:layout_alignBottom="@+id/edit_user_zhucei_yanzheng"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/fanghui"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageButton_fanghui"
        android:background="@color/ww"/>

    <cn.gem.weight.login_edittext
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="3"
        android:id="@+id/edit_user_zhucei_zhanghao"
        android:background="@android:color/white"
        android:hint="请输入邮箱/手机号"
        android:inputType="textPersonName"
        android:maxLength="30"
        android:paddingLeft="10.0dip"
        android:textSize="16.0sp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/toolbar2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <cn.gem.weight.login_edittext
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="3"
        android:id="@+id/edit_user_zhucei_yanzheng"
        android:background="@android:color/white"
        android:hint="请输入验证码"
        android:inputType="textPersonName"
        android:maxLength="30"
        android:paddingLeft="10.0dip"
        android:textSize="16.0sp"
        android:layout_below="@+id/edit_user_zhucei_miam"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
