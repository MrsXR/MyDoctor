<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HospitalBriefActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/hospital_detail_toolbar"
        android:background="@color/blue"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医院详情"
            android:textSize="25dp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hospital_detail_toolbar"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/hospital_temp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hospital_brief_photo"
            android:background="@mipmap/hospitaltest"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hospital_brief_name"
            android:text="医院名字"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/hospital_brief_photo"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hospital_brief_address"
        android:text="医院地址"
        android:textSize="15dp"
            android:layout_toRightOf="@+id/hospital_brief_photo"
            android:layout_below="@+id/hospital_brief_name"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:background="@drawable/buttonstyle"
            android:layout_alignParentRight="true"
            android:text="查看地图"
            android:textSize="15dp"
            android:textColor="@color/blue"
            android:id="@+id/hosptital_baidu"
            android:layout_alignBottom="@+id/hospital_brief_address"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/hospital_temp"
        android:background="@color/splitbar"
        android:id="@+id/hospital_temp1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hospital_temp1"
        android:id="@+id/hospital_temp2"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hospital_order"
            android:text="预约挂号"
            android:background="@color/lightblue"
            android:textColor="@color/darkGrey"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hospital_brief"
            android:background="@color/lightblue"
            android:text="医院简介"
            android:textColor="@color/darkGrey"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lightblue"
            android:text="预约规则"
            android:id="@+id/hospital_regulation"
            android:textColor="@color/darkGrey"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/hospital_temp2"
        android:background="@color/splitbar"
        android:id="@+id/hospital_temp3"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hospital_brief_fragemnt"
        android:layout_below="@+id/hospital_temp3">
    </FrameLayout>


</RelativeLayout>
