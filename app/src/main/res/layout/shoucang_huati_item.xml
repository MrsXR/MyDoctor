<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#ffffff"
    android:layout_gravity="center_vertical">

    <View style="@style/bg_line"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/shouacang_list_item_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="7dp"
            >


        </RelativeLayout>

        <ImageView
            android:id="@+id/shouacang_list_item_huati_tupian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/img_border"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:layout_marginRight="19dp"
            android:layout_marginEnd="19dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/shouacang_list_item_tv_huati_mokuai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minLines="1"
            android:maxLines="2"
            android:textSize="22sp"
            android:textColor="#444"
            android:text="标题"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/shouacang_list_item_huati_tieziming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minLines="1"
            android:maxLines="2"
            android:textSize="14sp"
            android:textColor="#444"
            android:text="贴名"
            android:layout_toRightOf="@+id/shouacang_list_item_tv_huati_mokuai"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            />
        <TextView
            android:id="@+id/shouacang_list_item_huati_fatieren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minLines="1"
            android:maxLines="2"
            android:textSize="14sp"
            android:textColor="#444"
            android:text="发帖人"
            android:layout_below="@+id/shouacang_list_item_tv_huati_mokuai"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="13dp"
            />
        <TextView
            android:id="@+id/shouacang_list_item_huati_shijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minLines="1"
            android:maxLines="2"
            android:textSize="14sp"
            android:textColor="#444"
            android:text="时间"
            android:layout_below="@+id/shouacang_list_item_tv_huati_mokuai"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:id="@+id/shouacang_list_item_theme_renshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minLines="1"
            android:maxLines="2"
            android:textSize="14sp"
            android:textColor="#444"
            android:text="人数"
            android:layout_below="@+id/shouacang_list_item_tv_huati_mokuai"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="40dp"
            />



    </RelativeLayout>
</RelativeLayout>