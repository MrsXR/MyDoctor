<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/RL_title_theme"
        android:background="@color/colorTitle"
        >

        <RadioGroup
            android:layout_centerInParent="true"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/rg_title_theme"
            >

            <RadioButton
                android:drawableTop="@drawable/main_bottom_item_bg"
                android:onClick="onTabClicked"
                style="@style/radiobt"
                android:background="@drawable/rediozixun2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zixun"
                android:textSize="16dp"
                android:id="@+id/rb_zixun1"
                android:checked="true"
                android:layout_weight="1"/>

            <RadioButton
                android:onClick="onTabClicked"
                style="@style/radiobt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hottalk"
                android:textSize="16dp"
                android:background="@drawable/radioreliao2"
                android:id="@+id/rb_reliao1"
                android:layout_weight="1"/>
        </RadioGroup>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_hint"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/hint"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_find"
            android:layout_marginRight="15dp"
            android:src="@mipmap/findw"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container">

    </FrameLayout>


</LinearLayout>
